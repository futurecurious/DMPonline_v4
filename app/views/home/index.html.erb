<div class="content">
	<div class="home_left_column">	
		<div class="welcome-message">
			
<!--			<h2><%= raw t('welcome_title')%></h2> -->
			<%= raw t('welcome_text')%>
                        <p class="step"><%= image_tag('/assets/step_1.jpg', width:'50', height:'50', :alt => "step 1") %><%= raw t('step_1')%></br>
                        <%= image_tag('/assets/step_2.jpg', width:'50', height:'50', :alt => "step 2") %><%= raw t('step_2')%></br>
                        <%= image_tag('/assets/step_3.jpg', width:'50', height:'50', :alt => "step 3") %><%= raw t('step_3')%></br>
                        <%= image_tag('/assets/step_4.jpg', width:'50', height:'50', :alt => "step 4") %><%= raw t('step_4')%></p>

<!--			<p class="home-description"><%= raw t('welcome_links')%></p>
-->			
		</div>
	</div>
	<div class="home_right_column">	
		<div class="accordion" id="homepage-accordion">
			<div class="accordion-group">
				<div class="accordion-heading">
					<a class="accordion-toggle" data-toggle="collapse" data-parent="#homepage-accordion" href="#collapse-login">
						<%= t('helpers.sign_in')%><span class="plus-laranja"> </span></a>
					<p>
						<%= t('helpers.sign_in_text')%>
					</p>
				</div>
				<div id="collapse-login" class="accordion-home collapse">
					<div class="accordion-inner">
						<%= render :partial => 'shared/login_form', locals: {extended: false} %>
					</div>
				</div>
			</div>
			<div class="accordion-group">
				<div class="accordion-heading">
					<a class="accordion-toggle" data-toggle="collapse" data-parent="#homepage-accordion" href="#collapse-register">
						<%= t('helpers.sign_up') %><span class="plus-laranja"> </span></a>
					<p>
						<%= t('helpers.sign_up_text')%>
					</p>
					
				</div>
				<div id="collapse-register" class="accordion-home collapse">
					<div class="accordion-inner">
						<%= render :partial => 'shared/register_form', locals: {extended: false} %>
					</div>
				</div>
					
			</div>
			<div class="ccid_message">		
				<%= raw t('ccid_message')%>	
				</div>
		</div>
	</div>	
	<div class="two-column-clear"></div>
</div>
