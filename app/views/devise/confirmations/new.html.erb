<h1><%= t('devise.confirmations.resend_instructions') %></h1>
<div class="dmp_details_body">
  <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>
    <div class="dmp_details">
      <table class="dmp_details_table">
      <tr>
        <td class="first"><%= t('helpers.email') %></td>
        <td><%= f.email_field :email, :autofocus => true %>
         </td>
      </tr>
      </table>


      <div><%= f.submit t('devise.confirmations.resend_instructions'), :class => 'btn btn-primary' %></div>

    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
